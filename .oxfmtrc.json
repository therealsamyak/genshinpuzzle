{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "useTabs": false,
  "tabWidth": 2,
  "endOfLine": "lf",
  "ignorePatterns": [
    "**/build",
    "**/public",
    "bun.lock",
    "routeTree.gen.ts",
    "dist",
    "node_modules",
    "coverage"
  ]
}
